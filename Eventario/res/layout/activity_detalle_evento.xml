<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/detalle_evento_iv_compartir"
        android:background="@color/gris_claro"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/detalle_evento_iv_evento"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/detalle_evento_tv_categoria"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gris_claro"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/rojo_logo" />
    </LinearLayout>

    <ImageView
        android:id="@+id/detalle_evento_iv_compartir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/gris_claro"
        android:src="@drawable/ic_launcher_compartir" />

    <View
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detalle_evento_iv_compartir"
        android:background="@color/rojo_logo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:background="@color/gris_claro"
        android:src="@drawable/ic_launcher_asterisco" />

    <TextView
        android:id="@+id/detalle_evento_tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:background="@color/gris_claro"
        android:gravity="center|left"
        android:paddingRight="5dp"
        android:text="TextView" />

    <View
        android:id="@+id/View01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView4"
        android:background="@color/rojo_logo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/View01"
        android:layout_below="@+id/View01" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/gris_claro" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_reloj" />

            <TextView
                android:id="@+id/detalle_evento_tv_hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/gris_claro" >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_calendario" />

            <TextView
                android:id="@+id/detalle_evento_tv_fecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/gris_claro" >

        <ImageView
            android:id="@+id/detalle_evento_iv_dinero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:src="@drawable/ic_launcher_dinero_rojo" />

        <ImageView
            android:id="@+id/detalle_evento_iv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:src="@drawable/ic_launcher_informacion_rojo" />

        <ImageView
            android:id="@+id/detalle_evento_iv_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:src="@drawable/ic_launcher_tel_rojo" />

        <ImageView
            android:id="@+id/detalle_evento_iv_www"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:src="@drawable/ic_launcher_www_rojo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/View03"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_below="@id/View02"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5" >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_pin_blanca" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:overScrollMode="never" >
                <TextView
                    android:id="@+id/detalle_evento_tv_donde"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="TextView" />
                </ScrollView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="@color/rojo_logo" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:overScrollMode="never" >

                <TextView
                    android:id="@+id/detalle_evento_tv_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="TextView" />
            </ScrollView>
        </LinearLayout>

        <fragment
            android:id="@+id/detalle_evento_trip_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            class="com.google.android.gms.maps.MapFragment"
            map:cameraTargetLat="19.432727"
            map:cameraTargetLng="-99.133179"
            map:cameraZoom="14" />
    </LinearLayout>

    <View
        android:id="@+id/View03"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:background="@color/negro" />

    <View
        android:id="@+id/View02"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@id/linearLayout2"
        android:layout_centerVertical="true"
        android:background="@color/negro" />

</RelativeLayout>